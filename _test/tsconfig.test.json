{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "outDir": "./compiled",
    "sourceMap": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "downlevelIteration": true,
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "strictNullChecks": true,
    "allowJs": true
  },
  "include": [
    "unit",
    "../src/types"
  ],
}
